<h1> MAKE A PIZZA <h1>
<% if flash[:error] %>
    <% @messages.each do |i| %>
        <%= i %>
    <% end %>
<% end %>

<%= form_for @pizza do |f| %>
    <%= f.label :name %>:
    <%= f.text_field :name %><br />
  
    <%= f.label :ingredients %>:
    <%= f.text_field :ingredients %><br />

    <%= f.collection_select :restaurant_id, @restaurants, :id, :name, prompt: false %>

    <%= f.submit %>

  <% end %>